;----Colors-------------------------------------------------------------------
[colors]
background = #2e3440
background-alt = #434C5E

foreground = #ECEFF4
foreground-alt = #D8DEE9

primary = #5E81AC
secondary = #81A1C1
alert = #8FBCBB

underline = #88C0D0
;-----------------------------------------------------------------------------

;----Composite-----------------------------------------------------------------
[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false
;------------------------------------------------------------------------------
[global/wm]

;vim:ft=dosini



;====BaseBarParameters========================================================
[bar/base]
;----Monitor------------------------------------------------------------------
;monitor = ${env:MONITOR:HDMI-1}
;----Size---------------------------------------------------------------------
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true
;----MainColors----------------------------------------------------------------
background = ${colors.background}
foreground = ${colors.foreground}
;----Line----------------------------------------------------------------------
line-size = 2
line-color = #f00
;----Border--------------------------------------------------------------------
border-bottom-size = 0
border-color = ${colors.secondary}
;----Margin\Padding------------------------------------------------------------
padding-left = 5
padding-right = 5
module-margin-left = 0
module-margin-right = 0
;----Font----------------------------------------------------------------------
font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
;----Modules-------------------------------------------------------------------
modules-left = xwindow
modules-center = bspwm
modules-right = pulseaudio separator eth separator xkeyboard separator date separator powermenu
;----Tray----------------------------------------------------------------------
tray-position = right
tray-padding = 2
;tray-background = #0063ff
;----Other---------------------------------------------------------------------
;wm-restack = bspwm
;override-redirect = true
;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev
;----Mouse---------------------------------------------------------------------
cursor-click = pointer
cursor-scroll = ns-resize
;=============================================================================
[module/separator]
type = custom/text
content = "  "


;====AdditionalBarParameters==================================================
[bar/additional]
;----Monitor------------------------------------------------------------------
;monitor = ${env:MONITOR:HDMI-1}
;----Size---------------------------------------------------------------------
width = 100%
height = 27
radius = 8.0
fixed-center = false
;----MainColors----------------------------------------------------------------
background = ${colors.background}
foreground = ${colors.foreground}
;----Line----------------------------------------------------------------------
line-size = 2
line-color = #f00
;----Border--------------------------------------------------------------------
border-size = 4
border-color = #00000000
;----Margin\Padding------------------------------------------------------------
padding-left = 5
padding-right = 5
module-margin-left = 1
module-margin-right = 2
;----Font----------------------------------------------------------------------
font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0	
font-2 = siji:pixelsize=10;1
;----Modules-------------------------------------------------------------------
modules-left = info-kernel
modules-center = 
modules-right = filesystem memory cpu
;----Tray----------------------------------------------------------------------
tray-position = right
tray-padding = 2
;----Mouse---------------------------------------------------------------------
cursor-click = pointer
cursor-scroll = ns-resize



;====MODULES==================================================================

;----Title--------------------------------------------------------------------
[module/xwindow]
type = internal/xwindow
;ФОРМАТ ЗАГОЛОВКА
label = %title:0:30:...%
;-----------------------------------------------------------------------------

;----Kernel-------------------------------------------------------------------
[module/info-kernel]
type = custom/script
exec = uname -r
interval = 1024
;-----------------------------------------------------------------------------

;----Keyboard-----------------------------------------------------------------
[module/xkeyboard]
type = internal/xkeyboard
;БЛОКИРОВКА ОТОБРАЖЕНИЯ ОПОВЕЩЕНИЯ ВКЛЮЧЕНИЯ NUM LOCK,
;ОСТАЛЬНЫЕ ОПОВЕЩЕНИЯ МОЖНО БЛОКИРОВАТЬ ЧЕРЕЗ BLACKLIST-N
blacklist-0 = num lock
;ФОРМАТ И ЦВЕТА ПРЕФИКСА
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.underline}
;ФОРМАТ ОТОБРАЖЕНИЯ
label-layout = %layout%
label-layout-underline = ${colors.underline}
;ОТСТУПЫ, ЦВЕТА
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.underline}
;-----------------------------------------------------------------------------

;----FileSystem---------------------------------------------------------------
[module/filesystem]
type = internal/fs
;ИНТЕРВАЛ ОБНОВЛЕНИЯ
interval = 25
;ДИСК КОТОРЫЙ БУДЕТ ОТОБРАЖАТСЯ
mount-0 = / 
;ФОРМАТ ОТОБРАЖЕНИЯ ЦВЕТ, ТОЧКА МОНТИРОВАНИЯ, ПРОЦЕНТЫ
label-mounted = %mountpoint%%{F-}: %percentage_used%%
;ОТОБРАЖЕНИЕ НЕ ПРИМОНТИРОВАННОГО ДИСКА
label-unmounted = %mountpoint% not mounted
;ЦВЕТ ОТОБРАЖЕНИЯ НЕ ПРИМОНТИРОВАННОГО ДИСКА
label-unmounted-foreground = ${colors.foreground-alt}
;-----------------------------------------------------------------------------

;----BSPWM--------------------------------------------------------------------
[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2
label-occupied = %index%
label-occupied-padding = 2
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2
label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2
; Separator in between workspaces
; label-separator = |
;----------------------------------------------------------------------------

;----CPU----------------------------------------------------------------------
[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu:"
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline}
label = %percentage:2%%
;-----------------------------------------------------------------------------

;----Memory-------------------------------------------------------------------
[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem:"
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline}
label = %percentage_used%%
;-----------------------------------------------------------------------------

;----WLAN---------------------------------------------------------------------
[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%
format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}
ramp-signal-0 = .
ramp-signal-1 = ..
ramp-signal-2 = ..,
ramp-signal-3 = ..:
ramp-signal-4 = .::
ramp-signal-foreground = ${colors.foreground-alt}
;-----------------------------------------------------------------------------

;----LAN----------------------------------------------------------------------
[module/eth]
type = internal/network
interface = eth0
interval = 3.0
format-connected-underline = ${colors.underline}
format-connected-prefix = "LAN:"
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}
;-----------------------------------------------------------------------------

;----Date/Time----------------------------------------------------------------
[module/date]
type = internal/date
interval = 5
date =
date-alt = " %Y-%m-%d"
time = %H:%M:%S
time-alt = %H:%M
format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline}
label = %date% %time%
;-----------------------------------------------------------------------------

;----PulseAudio---------------------------------------------------------------
[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
;------------------------------------------------------------------------------
